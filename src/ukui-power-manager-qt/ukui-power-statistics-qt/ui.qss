QCheckBox::indicator:unchecked {
    border-image:url(:/resource/icon/unchecked.png);
}
QCheckBox::indicator:checked {
    border-image:url(:/resource/icon/checked.png);
}
QCheckBox::indicator:unchecked:pressed {
    border-image:url(:/resource/icon/undetermine.png);
}


QScrollBar {
            background:#969191;
            width:8px;
            }
QScrollBar::handle{
                  background:#3E3A3A;
                  border-radius:3px;
                  height:30px;
                  }

QScrollBar::up-arrow,QScrollBar::down-arrow {
      width:none;
      height:none;
      background: none;
}

QScrollBar::left-arrow,QScrollBar::right-arrow {
      width:none;
      height:none;
      background: none;
}
QComboBox {
    border-top-right-radius: 2px; /* same radius as the QComboBox */
    border-bottom-right-radius: 2px;
    height: 30px;
    combobox-popup: 0;
    background-color:#EDEDED;
    selection-color:#EDEDED;
    selection-background-color:#EDEDED;
}

QComboBox::item {
selection-color:#EDEDED;
selection-background-color:#EDEDED;
}
QComboBox::drop-down {
image:url(:/resource/icon/down.png);
subcontrol-position: right centor;
border-top-right-radius:3px;
border-bottom-right-radius:3px;
}


