
QWidget {
    background-color:white;
}

QWidget:focus {
    outline:none;
}

/*tablewidget 样式*/
QTableView,QTableWidget {
    border:1px solid #E0DDDC;   /*边框为1像素，灰色*/
    padding-bottom:40px;
    font:12px;
    color:#555555;
}

/*这里是表格表头样式*/
QHeaderView::section {
    border:0px solid #E0DDDC;   /*先把边框宽度设为0，即隐藏所有表头边框*/
    font:12px;
    }

QTabWidget::pane { /* The tab widget frame */
      border-top: 1px solid #C2C7CB;
  }

/* Style the tab using the tab sub-control. Note that
  it reads QTabBar _not_ QTabWidget */
QTabBar {
  font:14px;
}

QTabBar::tab {
    border:none;
    border-bottom:1px;
    border-color:#C2C7CB;
    padding:3px;
    padding-right: 40px;
    font:14px;
    color:#666666;
    height:32px;
}

QTabBar::tab:selected { /* The tab widget frame */
      font: bold;
      border-bottom:1px;
      border-bottom-color:#333333;
  }

QTabBar::tab-bar:selected { /* The tab widget frame */
      border-bottom:1px;
      border-bottom-color:#242424;
  }
