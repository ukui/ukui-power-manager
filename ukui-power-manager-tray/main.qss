    font-weight:400;
    color:rgba(255,255,255,0.91);
    border-radius:2px;

}

QLabel#power_title {
    height:40px;
    font-size:20px;
    font-family:Noto Sans CJK SC;
    font-weight:400;
    color:rgba(255,255,255,0.97);
}

QLabel#kind
{
    font-size:13px;
    font-family:Noto Sans CJK SC;
